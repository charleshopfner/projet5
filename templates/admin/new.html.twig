{% extends 'base.html.twig' %}

{% block title %}Ajouter une nouvelle image{% endblock %}

{% block body %}
    
<div class="container col-md-6">
{{ form_start(form) }}
    <div class="col md-4">{{ form_row(form.imageFile) }}</div>
    <div class="col md-4">{{ form_row(form.imageTitle) }}</div>
{{ form_rest(form) }}
<button class="btn btn-primary">{{ button|default('Ajouter') }}</button>
{{ form_end(form) }}
</div>
{% endblock %}